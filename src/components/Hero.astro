---
import { Debug } from 'astro/components';
import { Image, Picture } from '@astrojs/image/components';
import CtaButton from "./CtaButton.astro";
import hero from '../assets/images/hero-cutout.svg'
---
<section class="w-full h-full flex flex-row justify-center items-center">
  <header class="w-1/2">
    <div id="content" class="flex flex-col items-center">
      <div class="flex flex-col mb-36 text-midnight-blue font-dserif">
        <p class="w-3/5 h-2/3 text-6xl mb-4">Behavior Analysis and Therapy</p>
        <p class="h-1/3 text-4xl">for Adults, Elders and Their Caretakers</p>
      </div>
      <CtaButton>Schedule a Free Assessment</CtaButton>
    </div>
  </header>
  <aside class="w-1/2 self-start">
    <img class="w-full" src={hero} width="575" alt=""/>
  </aside>
</section>