---
import { Image, Picture } from '@astrojs/image/components';
import CtaButton from './CtaButton.astro';
import rocks from "../assets/images/cta-bg.png"
---
<section id="nt-cta" class="relative flex flex-col bg-white w-full px-3.5rem">
  <Picture alt="" id="cta-bg-img" sizes="" src={rocks} widths={[rocks.width]} />
 <div class="absolute flex flex-row justify-center items-center w-full h-full">
    <div id="cta-card" class="flex flex-col justify-evenly items-center w-2/5 h-1/2 bg-white shadow-md">
      <div id="content" class="h-full flex flex-col justify-between items-center p-12">
        <h2 id="card-header" class="font-dserif text-5xl text-midnight-blue" >Let's Talk</h2>
        <p id="card-chaser" class="font-dsans text-2xl text-midnight-blue">
          The first step in therapy is talking. Let&#039;s find a time where we
          can meet and talk about what&#039;s on your mind.
        </p>
        <CtaButton>Schedule a Free Assessment</CtaButton>
      </div>
    </div>
 </div>
</section>

<style>
.nt-cta {
  background-color: var(--white);
  padding: 70px 40.57px 70px 40.56px;
}
.cta-bg-img {
  width: 100%;
  height: 100%;
  position: relative;
}
.cta-card {
  width: 43.4%;
  height: 54.84%;
  background-color: var(--white);
  box-shadow: 0 3px 11px 0 var(--transparent-black-3);
  position: absolute;
  left: 345.81px;
  top: 140px;
}
.content {
  width: 34.44%;
  height: 43.06%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  left: 400.57px;
  bottom: 173px;
}
.card-header {
  width: 168.34px;
  color: var(--midnight-blue);
  text-align: center;
  margin-bottom: 19px;
  font-family: var(--dm-serif-text-39-regular-family);
  font-size: var(--dm-serif-text-39-regular-size);
  font-weight: var(--dm-serif-text-39-regular-weight);
  line-height: var(--dm-serif-text-39-regular-line-height);
}
.card-chaser {
  max-width: 420.85px;
  color: var(--midnight-blue);
  text-align: center;
  margin-bottom: 19px;
  font-family: var(--dm-sans-18-regular-family);
  font-size: var(--dm-sans-18-regular-size);
  font-weight: var(--dm-sans-18-regular-weight);
  line-height: var(--dm-sans-18-regular-line-height);
}
.cta-button {
  background-color: var(--midnight-blue);
  padding: 24px 13.18px 26px 12.17px;
  display: flex;
  align-items: center;
}
.btn-txt {
  width: 259.61px;
  color: var(--white);
  text-align: center;
  font-family: var(--dm-sans-14-regular-family);
  font-size: var(--dm-sans-14-regular-size);
  font-weight: var(--dm-sans-14-regular-weight);
  line-height: var(--dm-sans-14-regular-line-height);
}
</style>
