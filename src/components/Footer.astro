---
import Logo from './Logo.astro'
import Nav from './Nav.astro'
import ContactCard from './ContactCard.astro'
import CtaButton from './CtaButton.astro'
const year = new Date().getFullYear()
---
<footer id="nt-footer" class="relative w-full h-2/3 flex flex-col justify-center items-center bg-white shadow-xl">
  <div id="inner-footer" class="w-4/5 inline-grid grid-cols-4 mb-3rem">
    <Logo/>
    <Nav vertical />
    <ContactCard />
    <div>
      <CtaButton>Schedule a Free Assessment</CtaButton>
    </div>
  </div>
  <div >
    <span class="text-lg">All Rights Reserved | Newtrendaba.com | {year}</span>
  </div>
</footer>

