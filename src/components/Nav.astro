---
const navLinks = [
    {
        route: '/approach',
        label: 'The Approach'
    },
    {
        route: '/assessment',
        label: 'Tailored Assessment'
    },
    {
        route: '/about',
        label: 'About'
    },
    {
        route: '/contact',
        label: 'Contact'
    },
]
const { vertical = false } = Astro.props
const layout = () => !vertical ? 'flex <lg:(flex-col)' : 'flex flex-col'
const alignment = () => !vertical ? 'text-center' : 'py-2'
const fontSize = () => !vertical ? 'text-2xl' : 'text-xl'
---
<section class="flex flex-row">
    <nav id="nav-links" class="font-dsans w-full">
        <ul class:list={['list-none', layout(), 'justify-evenly']}>
            {navLinks.map((link) => (
                <li class:list={['w-full', 'px-2', alignment()]}>
                    <a class:list={['text-midnight-blue', 'no-underline', fontSize()]} href={link.route}>{link.label}</a>
                </li>
            ))}
        </ul>
        <div>
            <input type="checkbox" id="navigation" />
            <label for="navigation">
            +
            </label>
        </div>
    </nav>
</section>

<style>
.wrapper{
    overflow:hidden;
}
section {
    padding:30px 30px 30px 80px;
    -moz-transition:all 200ms ease-in;
    -webkit-transition:all 200ms ease-in;
    -o-transition:all 200ms ease-in;
    transition:all 200ms ease-in;
}
