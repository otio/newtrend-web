---
const navLinks = [
  {
    route: "/approach",
    label: "Approach",
  },
  {
    route: "/assessment",
    label: "Assessment",
  },
  {
    route: "/about",
    label: "About",
  },
  {
    route: "/contact",
    label: "Contact",
  },
];
const { 
    listStyle = [], 
    listItemStyle = [], 
    anchorStyle = [] } = Astro.props
---
<ul class:list={listStyle}>
{
  navLinks.map((link) => (
    <li
      class:list={[
                "4k:text-4xl",
                "hd:text-3xl",
                "2xl:my-3",
                "mx-12",
                ]}>
        <a
        href={link.route}
        class:list={[
                    "block",
                    "uppercase",
                    "no-underline",
                  ]}
      >
        {link.label}
      </a>
    </li>
  ))
}
</ul>