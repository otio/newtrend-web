  font-weight: var(--dm-sans-18-regular-weight);
  line-height: var(--dm-sans-18-regular-line-height);
}
.session-options {
  height: 46.57%;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-self: stretch;
}
.options-heading {
  width: 462px;
  color: var(--midnight-blue);
  text-align: center;
  margin-bottom: 63px;
  font-family: var(--dm-serif-text-39-regular-family);
  font-size: var(--dm-serif-text-39-regular-size);
  font-weight: var(--dm-serif-text-39-regular-weight);
  line-height: var(--dm-serif-text-39-regular-line-height);
}
.options-tiles {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  width: 1086px;
}
.phone-option {
  background-color: var(--white);
  padding: 10px 65px 30px 66px;
  box-shadow: 0 3px 11px 0 var(--transparent-dark-gray);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.phone-icon {
  margin-bottom: 12px;
  padding: 5.79px 0 11.57px;
  display: flex;
  align-items: flex-start;
}
.vector {
  height: 100%;
  flex: 1;
  object-fit: cover;
}
.over-the-telephone {
  width: 187px;
