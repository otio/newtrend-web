  box-shadow: 0 3px 11px 0 var(--transparent-dark-gray);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.frame {
  margin-bottom: 16px;
  padding: 11.29px 0 11.28px;
  display: flex;
  align-items: center;
}
.vector-two {
  flex: 1;
  align-self: stretch;
  object-fit: cover;
}
.video-conference {
  width: 172px;
  color: var(--midnight-blue);
  text-align: center;
  font-family: var(--dm-sans-20-regular-family);
  font-size: var(--dm-sans-20-regular-size);
  font-weight: var(--dm-sans-20-regular-weight);
  line-height: var(--dm-sans-20-regular-line-height);
}
.house-option {
  background-color: var(--white);
  padding: 10px 55px 30px 94px;
  box-shadow: 0 3px 11px 0 var(--transparent-dark-gray);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.house-icon {
  margin-bottom: 12px;
  margin-left: 21px;
  padding: 11.86px 1.36px 12px 1.35px;
  display: flex;
  align-items: center;
}
.at-your-home {
  width: 169px;
  color: var(--midnight-blue);
  text-align: center;
  font-family: var(--dm-sans-20-regular-family);
  font-size: var(--dm-sans-20-regular-size);
  font-weight: var(--dm-sans-20-regular-weight);
